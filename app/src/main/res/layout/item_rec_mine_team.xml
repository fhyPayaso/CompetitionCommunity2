<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/bg_white">


    <TextView
        android:id="@+id/txt_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_team_flag"
        android:layout_width="8dp"
        android:layout_height="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/txt_team_name"
        android:src="@drawable/ic_team_flag" />


    <View
        android:id="@+id/view_divider"
        android:layout_width="225dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@id/txt_team_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:background="@color/bg_black" />


    <TextView
        android:id="@+id/txt_team_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_team_name"
        android:layout_alignTop="@id/view_divider"
        android:layout_marginTop="10dp"
        android:text="@string/txt_mine_team_number" />

    <TextView
        android:id="@+id/txt_team_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txt_team_number"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/txt_team_number"
        android:text="@string/txt_mine_team_position" />


    <TextView
        android:id="@+id/team_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txt_team_number"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/txt_team_number"

        />

    <TextView
        android:id="@+id/team_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txt_team_number"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/txt_team_position" />


    <TextView
        android:id="@+id/txt_team_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_btn"
        android:padding="5dp"
        android:textSize="11sp" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_team_title"
            style="@style/title_txt"
            android:background="@color/colorAccent"
            android:text="@string/message" />

        <ImageView
            android:id="@+id/img_add_friends"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_add_friends"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:layout_marginRight="10dp"

            />

    </RelativeLayout>




        <android.support.design.widget.TabLayout
            android:id="@+id/table_header_message"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="2dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:tabSelectedTextColor="@color/text_no_selected"
            app:tabTextAppearance="@style/tab_message_text_size"
            app:tabTextColor="@color/text_no_selected"
            android:background="@color/white"
            app:tabIndicatorHeight="0dp"
            >

        </android.support.design.widget.TabLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </RelativeLayout>



</LinearLayout>
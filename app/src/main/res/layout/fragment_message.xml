<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_team_title"
            style="@style/title_txt"
            android:background="@color/colorAccent"
            android:text="@string/message"/>

        <ImageView
            android:id="@+id/img_add_friends"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_search"/>

    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/table_header_message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingTop="2dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/text_no_selected"
        app:tabTextAppearance="@style/tab_message_text_size"
        app:tabTextColor="@color/text_no_selected"
        >

    </android.support.design.widget.TabLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </RelativeLayout>


</LinearLayout>
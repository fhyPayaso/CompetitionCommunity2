<?xml version="1.0" encoding="utf-8"?>
<cn.abtion.neuqercc.widget.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginTop="3dp"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/rl_message_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_avatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/bg_about_us" />

        <TextView
            android:id="@+id/message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/message_avatar"
            android:layout_toRightOf="@id/message_avatar"
            android:text="这是名字"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/message_avatar"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/message_avatar"
            android:text="最新消息sssssssssss" />


        <TextView
            android:id="@+id/txt_last_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="12:00" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_delete_message"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/bg_btn_red"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white" />
    </LinearLayout>


</cn.abtion.neuqercc.widget.SwipeItemLayout>

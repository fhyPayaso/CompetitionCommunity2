<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text_black"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/txt_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_dialog_title"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/txt_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_dialog_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="150dp"
                android:padding="3dp"
                android:textColor="@color/text_black"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:id="@+id/txt_dialog_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_dialog_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="220dp"
                android:padding="3dp"
                android:textColor="@color/text_warning"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
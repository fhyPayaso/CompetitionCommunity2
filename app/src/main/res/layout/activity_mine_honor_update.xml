<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginTop="16dp"
        android:background="@color/bg_white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_add_honor"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/bg_add_honor" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_event_name"
            android:textColor="@color/text_black"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/edit_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:hint="请输入赛事名称"
            android:textSize="16sp"
            android:gravity="right"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/txt_mine_about_us"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_get_time"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/liner_update_time"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/contest_spinner"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_update_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_spinner"
                android:layout_gravity="center"/>

        </LinearLayout>


    </RelativeLayout>


    <Button
        android:id="@+id/btn_honor_confirm_edit"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@color/bg_white"
        android:text="@string/btn_confirm_editing"
        android:textColor="@color/text_warning"
        android:textSize="18sp" />


</LinearLayout>

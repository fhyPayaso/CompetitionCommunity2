<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">




    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="@string/txt_team_name"
                android:textColor="@color/text_black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edit_team_name"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:singleLine="true"
                android:layout_below="@id/txt_team_name"
                android:layout_marginLeft="30dp"
                android:textSize="12sp"

                />

            <TextView
                android:id="@+id/txt_want_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_team_name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="@string/txt_want_join"
                android:textColor="@color/text_black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/edit_want_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/txt_want_join"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_team_member_adept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_want_join"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="@string/txt_team_member_adept"
                android:textColor="@color/text_black"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/txt_team_member_adept"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/edit_want_good_at"
                    android:layout_width="300dp"
                    android:singleLine="true"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"

                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/txt_team_declaration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="250dp"
                android:text="@string/txt_team_declaration"
                android:textColor="@color/text_black"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/edit_declaration"
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:layout_below="@id/txt_team_declaration"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bg_input_box"
                android:padding="8dp"
                android:gravity="start"
                android:textSize="12sp" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>